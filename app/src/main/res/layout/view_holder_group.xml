<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="90dp"
    android:layout_marginStart="@dimen/margin_medium"
    android:layout_marginBottom="@dimen/margin_medium_2"
    android:background="@drawable/background_groups"
    android:elevation="2dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvGroupPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_medium_2"
        android:layout_marginTop="@dimen/margin_card_medium"
        android:layout_marginEnd="@dimen/margin_medium_2"
        app:cardCornerRadius="@dimen/margin_medium">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivGroupPhoto"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/profile_demp" />

    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cvGroupPhoto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_medium"
        android:text="Smiles"
        android:textSize="@dimen/text_regular" />
</RelativeLayout>