<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/margin_medium"
    android:layout_marginStart="@dimen/margin_medium_2"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_groups"
    android:elevation="2dp"
    android:layout_marginBottom="@dimen/margin_medium">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_medium"
        android:layout_marginStart="@dimen/margin_card_medium"
        android:layout_marginEnd="@dimen/margin_card_medium"
        android:id="@+id/cvContactConversation"
        app:cardCornerRadius="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/profile_demp"
            android:layout_width="70dp"
            android:layout_height="70dp"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_marginTop="@dimen/margin_medium"
        android:id="@+id/tvContactsNameConversation"
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/cvContactConversation"
        android:text="Aung Thant Kyaw"
        />
    <TextView
        android:layout_marginTop="@dimen/margin_medium_2"
        android:layout_below="@+id/tvContactsNameConversation"
        android:textSize="@dimen/text_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/cvContactConversation"
        android:text="You : Where?"
        />

</RelativeLayout>